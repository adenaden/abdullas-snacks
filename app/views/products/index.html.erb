<h2>stock</h2>
<table style="border:1px solid black">
	<tr>
		<th>Name</th>
		<th>Price</th>
		<th>Quantity</th>
	</tr>
	<% @products.each do |product| %>
		<tr>
			<td><%= product.name %></td>
			<td><%= product.price %></td>
			<td><%= product.quantity %></td>
		</tr>
	<% end %>
</table>
<%= link_to "Add Product", new_product_path %>