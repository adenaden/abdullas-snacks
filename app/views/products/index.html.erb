<h1>Vending Machine</h1>


<div style="border:1px solid black">
	<% @products.each do |product| %>
		<% if product.quantity > 0 %>
			<%= link_to image_tag(product.image), new_purchase_path(product: product) %>
		<% end %>
	<% end %>
</div>


<br />
<br />
